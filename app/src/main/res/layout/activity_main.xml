<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="#ff1abbb5"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="mif50.weather.MainActivity">

        <TextView
            android:id="@+id/cityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:text="Spokane,US " />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/cityText"
            android:src="@drawable/images"
            android:layout_marginTop="10dp"
            android:id="@+id/icon"
            />
        <TextView
            android:id="@+id/tepm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27 june"
            android:textColor="#fff"
            android:layout_below="@+id/cityText"
            android:layout_centerHorizontal="true"
            android:textStyle="normal"
            android:textSize="35dp"
            android:layout_marginTop="25dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/windText"
            android:text="wind"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/icon"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cloudText"
            android:text="Cloud"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/windText"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pressureText"
            android:text="pressure"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/cloudText"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/humidityText"
            android:text="Humidity"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/pressureText"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sunriseText"
            android:text="SunRise"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/humidityText"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sunsetText"
            android:text="SunSet"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/sunriseText"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update"
            android:text="Last update"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/sunsetText"
            android:textStyle="bold"
            />
    </RelativeLayout>

